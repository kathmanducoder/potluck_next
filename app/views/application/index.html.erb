<div class="container">
  <div class="row text-center header">
    <div class="col-sm-12">
      <%= render 'application/title' %>
      <div class="sub-logo">
        <strong>|</strong> Plan your next potluck <strong>|</strong>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 border-right">
      <div class="row login-form justify-content-center">
        <%= form_tag("/login") do %>
          <div class="row"><%= text_field_tag "email", nil, placeholder: "Email"%></div>
          <div class="row"><%= password_field_tag  "password", nil, placeholder: "Password"%></div>
          <div class="row"><%= submit_tag "Log In", class: "login-button" %></div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="row sign-up-info">
        <p><%=link_to('Sign Up With Email', new_user_path)%></p>
        <p>Don't want an account? Sign in with <%=link_to('Google', '/auth/google_oauth2')%> or <%=link_to('Facebook', '/auth/facebook')%> instead.</p>
        <p></p>
        <p>Limited data is available publicly without signup via this <%=link_to('API endpoint', data_potlucks_path)%>.</p>
      </div>

    </div>
  </div>

</div>
